@model IEnumerable<Jabil.ViewModels.MainReport>
@{
	ViewBag.Title = "Main report";
}

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-primary list-panel" id="list-panel">
			<div class="panel-heading list-panel-heading">

				<a href="@Url.Action("Index","Buildings")" class="btn btn-default">Buildings <span class="badge">@ViewBag.buildings</span></a>
				<a href="@Url.Action("Index","Customers")" class="btn btn-default">Customers <span class="badge">@ViewBag.customers</span></a>
				<a href="@Url.Action("Index","PartNumbers")" class="btn btn-default">Parts <span class="badge">@ViewBag.parts</span></a>

			</div>
			<div class="panel-body">
				<table id="report-data-table" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th># Part</th>
							<th>Availability</th>
							<th>Customer</th>
							<th>Building</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
						<tr>
							<td>@item.NumberPart</td>
							<td>@item.Availability</td>
							<td>@item.Customer</td>
							<td>@item.Building</td>
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

@section scripts
{
	<script>
		$(document).ready(function () {
			$('#report-data-table').DataTable({
				dom: 'Bfrtip',
				buttons: [
					'copyHtml5',
					'excelHtml5',
					'csvHtml5',
					'pdfHtml5',
					'print'
				]
			});
		});
	</script>
}
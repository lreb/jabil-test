@model IEnumerable<Jabil.Models.PartNumber>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Parts</h3>

<p class="pull-right">
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default" })
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.PartNumber1)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Available)
		</th>
		<th>
			@Html.DisplayName("Building")

		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td class="col-md-3">
			@Html.DisplayFor(modelItem => item.PartNumber1)
		</td>
		<td class="col-md-3">
			@Html.DisplayFor(modelItem => item.Available)
